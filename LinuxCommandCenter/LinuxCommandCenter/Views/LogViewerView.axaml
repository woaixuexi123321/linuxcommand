<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:m="clr-namespace:LinuxCommandCenter.Models"
             xmlns:vm="clr-namespace:LinuxCommandCenter.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="LinuxCommandCenter.Views.LogViewerView"
             x:DataType="vm:LogViewerViewModel">

  <Grid RowDefinitions="Auto,*">
    <!-- Header -->
    <StackPanel Orientation="Vertical" Spacing="4">
      <TextBlock Text="Command log"
                 FontSize="22"
                 FontWeight="SemiBold"
                 Foreground="#111827"/>
      <TextBlock Text="Browse and search all commands executed from this app."
                 FontSize="13"
                 Foreground="#6B7280"/>
    </StackPanel>

    <!-- Content -->
    <Grid Grid.Row="1"
          Margin="0,16,0,0"
          ColumnDefinitions="2*,3*"
          ColumnSpacing="16">

      <!-- List -->
      <Border Background="#F3F4F6"
              CornerRadius="18"
              Padding="12">
        <Grid RowDefinitions="Auto,*,Auto"
              RowSpacing="8">
          <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                   Watermark="Search command or output..."
                   Background="White"
                   Padding="6"/>
          <ListBox Grid.Row="1"
                   Margin="0,4,0,0"
                   ItemsSource="{Binding FilteredResults}"
                   SelectedItem="{Binding SelectedResult}"
                   BorderThickness="0"
                   Background="Transparent">
            <ListBox.ItemTemplate>
              <DataTemplate x:DataType="m:CommandResult">
                <Border Padding="8"
                        Margin="0,2"
                        CornerRadius="8"
                        Background="White">
                  <Grid RowDefinitions="Auto,Auto"
                        RowSpacing="2">
                    <TextBlock Text="{Binding CommandText}"
                               FontWeight="SemiBold"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding Summary}"
                               FontSize="11"
                               Foreground="#6B7280"/>
                  </Grid>
                </Border>
              </DataTemplate>
            </ListBox.ItemTemplate>
          </ListBox>

          <Button Grid.Row="2"
                  Content="Clear log"
                  HorizontalAlignment="Right"
                  Command="{Binding ClearCommand}"/>
        </Grid>
      </Border>

      <!-- Details -->
      <Border Grid.Column="1"
              Background="White"
              CornerRadius="18"
              Padding="16">
        <Grid RowDefinitions="Auto,Auto,*,Auto"
              RowSpacing="8">
          <TextBlock Text="{Binding SelectedResult.CommandText}"
                     FontSize="14"
                     FontWeight="SemiBold"
                     Foreground="#111827"
                     TextWrapping="Wrap"
                     TextTrimming="CharacterEllipsis"/>

          <TextBlock Grid.Row="1"
                     Text="{Binding SelectedResult.Summary}"
                     FontSize="11"
                     Foreground="#6B7280"/>

          <TabControl Grid.Row="2">
            <TabItem Header="Standard output">
              <ScrollViewer Margin="4">
                <TextBlock Text="{Binding SelectedResult.StdOutput}"
                           FontFamily="Consolas, Menlo, monospace"
                           FontSize="12"
                           TextWrapping="Wrap"/>
              </ScrollViewer>
            </TabItem>
            <TabItem Header="Error output">
              <ScrollViewer Margin="4">
                <TextBlock Text="{Binding SelectedResult.StdError}"
                           FontFamily="Consolas, Menlo, monospace"
                           FontSize="12"
                           Foreground="#B91C1C"
                           TextWrapping="Wrap"/>
              </ScrollViewer>
            </TabItem>
          </TabControl>

          <TextBlock Grid.Row="3"
                     Text="Only commands executed through this application are shown here."
                     FontSize="11"
                     Foreground="#9CA3AF"
                     TextWrapping="Wrap"/>
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>