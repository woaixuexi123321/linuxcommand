<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="LinuxCommandCenter.Views.FileOperationsView">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Classes="card" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="File Operations" Classes="title" Margin="0,0,0,8"/>
                <TextBlock Text="Browse, manage, and manipulate files and directories on your Linux system." 
                          Classes="subtitle" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Directory Browser -->
            <Border Grid.Column="0" Margin="0,0,16,0" Classes="card">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Directory Navigation -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,16">
                        <Button Command="{Binding NavigateToHomeCommand}" Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <PathIcon Data="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z" Width="16" Height="16"/>
                                <TextBlock Text="Home"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding NavigateUpCommand}" Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <PathIcon Data="M4 12l1.41 1.41L11 7.83V20h2V7.83l5.58 5.59L20 12l-8-8-8 8z" Width="16" Height="16"/>
                                <TextBlock Text="Up"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding RefreshDirectoryCommand}" Classes="primary" Padding="12,8">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <PathIcon Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z" 
                                        Width="16" Height="16"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Current Directory -->
                    <Border Grid.Row="1" Background="#2D3748" CornerRadius="6" Padding="12" Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Data="M10 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2h-8l-2-2z" 
                                    Width="16" Height="16"/>
                            <TextBlock Text="{Binding CurrentDirectory}" FontFamily="Consolas" Foreground="#F8FAFC"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Directory Contents -->
                    <ScrollViewer Grid.Row="2">
                        <ItemsControl ItemsSource="{Binding DirectoryContents}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,4" Background="#2D3748" CornerRadius="6" Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <PathIcon Grid.Column="0" Width="16" Height="16" Margin="0,0,8,0"
                                                     Data="{Binding ., Converter={StaticResource FileIconConverter}}"/>
                                            
                                            <TextBlock Grid.Column="1" Text="{Binding}" FontFamily="Consolas" FontSize="12" 
                                                      Foreground="#E2E8F0" TextWrapping="NoWrap"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
            
            <!-- Middle Panel - Operations -->
            <Border Grid.Column="1" Width="2" Background="#334155" Margin="0,16"/>
            
            <!-- Right Panel - File Operations -->
            <Border Grid.Column="2" Classes="card">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- File Selection -->
                    <StackPanel Grid.Row="0" Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="File Operations" FontWeight="SemiBold" Foreground="#F8FAFC"/>
                        
                        <TextBox Text="{Binding SelectedFile, Mode=TwoWay}" Watermark="Selected file or directory"/>
                        <TextBox Text="{Binding DestinationPath, Mode=TwoWay}" Watermark="Destination path"/>
                        
                        <ComboBox ItemsSource="{Binding OperationTypes}" SelectedItem="{Binding SelectedOperation, Mode=TwoWay}"
                                 HorizontalAlignment="Stretch">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        
                        <CheckBox Content="Recursive operation" IsChecked="{Binding RecursiveOperation}" Foreground="#94A3B8"/>
                        
                        <Button Command="{Binding ExecuteFileOperationCommand}" Classes="primary" HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                <PathIcon Data="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" Width="20" Height="20"/>
                                <TextBlock Text="Execute Operation" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Quick Actions -->
                    <Border Grid.Row="1" Background="#2D3748" CornerRadius="8" Padding="16" Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" FontWeight="SemiBold" Foreground="#F8FAFC" Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Column="0" Grid.Row="0" Spacing="8" Margin="0,0,8,8">
                                    <TextBox Text="{Binding DestinationPath, Mode=TwoWay}" Watermark="Directory name" Margin="0,0,0,4"/>
                                    <Button Command="{Binding CreateDirectoryCommand}" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
                                            <PathIcon Data="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" 
                                                    Width="16" Height="16"/>
                                            <TextBlock Text="Create Directory"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Grid.Row="0" Spacing="8" Margin="8,0,0,8">
                                    <TextBox Text="{Binding DestinationPath, Mode=TwoWay}" Watermark="File name" Margin="0,0,0,4"/>
                                    <Button Command="{Binding CreateFileCommand}" HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Center">
                                            <PathIcon Data="M13 9V4H6v16h12V9h-5zm-2 8H8v-2h3v2zm0-4H8v-2h3v2zm5 4h-3v-2h3v2zm0-4h-3v-2h3v2z" 
                                                    Width="16" Height="16"/>
                                            <TextBlock Text="Create File"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Spacing="8" Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Permissions:" VerticalAlignment="Center" 
                                                  Foreground="#94A3B8" Margin="0,0,8,0"/>
                                        
                                        <TextBox Grid.Column="1" Text="{Binding FilePermissions, Mode=TwoWay}" 
                                                Watermark="e.g., 644 or 755" Margin="0,0,8,0"/>
                                        
                                        <Button Grid.Column="2" Command="{Binding ChangePermissionsCommand}">
                                            <TextBlock Text="Apply"/>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Permissions Guide -->
                    <Border Grid.Row="2" Background="#2D3748" CornerRadius="8" Padding="16">
                        <StackPanel>
                            <TextBlock Text="Permissions Guide" FontWeight="SemiBold" Foreground="#F8FAFC" Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Common Permissions" Foreground="#60A5FA" FontWeight="SemiBold"/>
                                    <TextBlock Text="644 - Read/write owner, read others" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="755 - Read/write/execute owner, read/execute others" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="777 - Read/write/execute all" Foreground="#94A3B8" FontSize="12"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Spacing="4">
                                    <TextBlock Text="Owner/Group" Foreground="#60A5FA" FontWeight="SemiBold"/>
                                    <TextBox Text="{Binding FileOwner, Mode=TwoWay}" Watermark="Owner" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBox Text="{Binding FileGroup, Mode=TwoWay}" Watermark="Group" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>